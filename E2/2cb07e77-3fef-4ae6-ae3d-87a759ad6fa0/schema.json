    "elements": {
      "title": {
        "type": "H1",
        "alignment": "",
        "description": {
          "en": "The main headline.",
          "fr": "Le titre principal."
        }
      },
      "subtitle": {
        "type": "H2",
        "description": {
          "en": "A phrase that follows the main headline.",
          "fr": "Une phrase qui suit le titre principal."
        }
      },
