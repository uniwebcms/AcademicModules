              "name": {
                "en": "Field",
                "fr": "Champ"
              },
              "fields": [
                {
                  "id": "label",
                  "type": "text",
                  "label": {
                    "en": "Field Label",
                    "fr": "Étiquette du champ"
                  },
                  "description": {
                    "en": "The label for the field.",
                    "fr": "L'étiquette du champ."
                  },
                  "required": true
                },
                {
                  "id": "widget",
                  "type": "select",
                  "label": {
                    "en": "Field Type",
                    "fr": "Type de champ"
                  },
                  "description": {
                    "en": "Defines the input type.",
                    "fr": "Définit le type d'entrée."
                  },
                  "required": true,
                  "options": [
                    {
                      "label": {
                        "en": "Input",
                        "fr": "Input"
                      },
                      "value": "input"
                    },
                    {
                      "label": {
                        "en": "Text Area",
                        "fr": "Zone de texte"
                      },
                      "value": "textarea"
                    },
                    {
                      "label": {
                        "en": "Select",
                        "fr": "Sélect"
                      },
                      "value": "select"
                    },
                    {
                      "label": {
                        "en": "Radio Group",
                        "fr": "Groupe de boutons radio"
                      },
                      "value": "radio"
                    },
                    {
                      "label": {
                        "en": "Checkbox",
                        "fr": "Case à cocher"
                      },
                      "value": "checkbox"
                    },
                    {
                      "label": {
                        "en": "File Upload",
                        "fr": "Téléchargement de fichier"
                      },
                      "value": "file"
                    }
                  ]
                },
                {
                  "id": "required",
                  "type": "checkbox",
                  "label": {
                    "en": "Required",
                    "fr": "Requis"
                  },
                  "description": {
                    "en": "If true, the field is mandatory.",
                    "fr": "Si vrai, le champ est obligatoire."
                  }
                },
                {
                  "id": "placeholder",
                  "type": "text",
                  "label": {
                    "en": "Placeholder Text",
                    "fr": "Texte de l'espace réservé"
